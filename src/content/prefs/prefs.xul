                        type="bool"
                        name="extensions.aios.mp.sidebar" />

            <preference id="KSOpen"
                        type="bool"
                        name="extensions.aios.ks.sidebar" />
            <preference id="KSLayout"
                        type="bool"
                        name="extensions.aios.ks.layout" />

            <preference id="PanelTabReverse"
                        type="bool"
                        name="extensions.aios.paneltab.reverse" />
            <preference id="PanelTabBMM"
                        type="bool"
                        name="extensions.aios.paneltab.bm" />
        </preferences>

        <tabbox flex="1"
                id="aiosTabboxPanels">

            <tabs onclick="AiOS_Prefs.rememberSelectedTab(this);">
                <tab label="&tab.panels.places;" />
                <tab label="&downloads.label;" />
                <tab label="&button.addons.label;" />
                <tab label="&tab.panels.other1;" />
                <tab label="&tab.panels.paneltab;"/>
            </tabs>

            <tabpanels flex="1">


                <!-- TAB: Bookmarks/History -->

                <tabpanel orient="vertical">
                    <vbox class="aiosSizeBox"
                          restart="true">

                        <groupbox>
                            <caption label="&bookmarksButton.label;" />
                            <checkbox preference="BMOpen"
                                      label="&misc.enablesidebar.label;"
                                      oncommand="AiOS_Prefs.checkboxObserver(this);" />
                        </groupbox>

                        <groupbox>
                            <caption label="&historyButton.label;" />
                            <checkbox preference="HIOpen"
                                      label="&misc.enablesidebar.label;"
                                      oncommand="AiOS_Prefs.checkboxObserver(this);" />
                        </groupbox>

                    </vbox>

                </tabpanel>


                <!-- TAB: Downloads -->

                <tabpanel orient="vertical">
                    <vbox class="aiosSizeBox"
                          restart="true">

                        <groupbox>
                            <caption label="&tab.gen.behavior;" />
                            <checkbox preference="DMPopup"
                                      label="&misc.enablepopup.label;"
                                      aiosChilds="!DMOpen"
                                      oncommand="AiOS_Prefs.checkboxObserver(this);" />
                            <checkbox preference="DMOpen"
                                      label="&misc.enablesidebar.label;"
                                      aiosChilds="DMLayout, DMAutoOpen, DMAutoClose, !DMPopup"
                                      oncommand="AiOS_Prefs.checkboxObserver(this);" />

                            <vbox class="indent">
                                <checkbox preference="DMAutoOpen"
                                          label="&misc.dm.autoopen.label;"
                                          aiosChilds="DMAutoClose"
                                          oncommand="AiOS_Prefs.checkboxObserver(this);" />
                                <vbox class="indent">
                                    <checkbox preference="DMAutoClose"
                                              label="&misc.dm.autoclose.label;" />
                                </vbox>
                            </vbox>

                            <vbox class="indent">
                                <checkbox preference="DMLayout"
                                          label="&misc.layout.label;" />
                            </vbox>
                        </groupbox>

                        <groupbox>
                            <caption label="&tab.gen.appearance;" />
                            <checkbox preference="DMCount"
                                      label="&misc.count.label;" />
                            <checkbox preference="DMShading"
                                      label="&misc.dm.shading.label;" />
                        </groupbox>
                    </vbox>

                </tabpanel>


                <!-- TAB: Add-ons -->

                <tabpanel orient="vertical">
                    <vbox class="aiosSizeBox"
                          restart="true">

                        <groupbox>
                            <caption label="&tab.gen.behavior;" />
